<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.spbau.nikiforovskaya.ui.NetPlayerController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="NetPlayerPane">

    <left>
        <VBox alignment="CENTER" spacing="5">

            <fx:define>
                <ToggleGroup fx:id="playerChoosing"/>
            </fx:define>
            <Text text="Choose a player:"/>
            <RadioButton fx:id="xChosen" contentDisplay="RIGHT" mnemonicParsing="false"
                         selected="true" text="Xs" toggleGroup="$playerChoosing"/>
            <RadioButton contentDisplay="RIGHT" mnemonicParsing="false"
                         text="Os" toggleGroup="$playerChoosing"/>
            <fx:define>
                <ToggleGroup fx:id="levelChoosing"/>
            </fx:define>
            <Text fx:id="textInfo"/>
            <TextField fx:id="inputUser" text="localhost" />

            <Button id="startGame"
                    text="start game"
                    prefWidth="${NetPlayerPane.width / 5}"
                    onAction="#startGame"/>
            <Button id="backFromNetPlayer"
                    text="back"
                    prefWidth="${NetPlayerPane.width / 5}"
                    onAction="#backToMainMenu"/>
        </VBox>
    </left>
    <center>
        <GridPane fx:id="gameField">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <Text fx:id="gameLog" text="If you choose O's, write your X friend's ip. For example: 123.0.0.0"/>
    </bottom>
</BorderPane>

