<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.spbau.nikiforovskaya.ui.MainController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="MainMenuPane">

    <center>
        <VBox alignment="CENTER" spacing="5">
            <Button id="singlePlayer"
                    prefWidth="${MainMenuPane.width / 3}"
                    text="single player"
                    onAction="#newSinglePlayerScene"/>
            <Button id="hotSeat"  text="hot seat"
                    onAction="#newHotSeatScene"
                    prefWidth="${MainMenuPane.width / 3}"/>
            <Button id="statistics"  text="statistics"
                    onAction="#newStatisticsScene"
                    prefWidth="${MainMenuPane.width / 3}"/>
        </VBox>
    </center>
</BorderPane>
